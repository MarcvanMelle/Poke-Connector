<h1>Change Your Pokemon Offer</h1>

<%= form_for :pokeballs, method: :put, url: pokeball_path(@pokeball.id) do |f| %>

  <div class="row">
    <div class="text-center columns small-3 small-pokediv callout">
      <%= image_tag @pokeball.pokemon.sprite, class: "small-poke-sprite" %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-7">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-3 float-left">
      <%= f.label :level, class: "inline" %>
      <em>(1-100)</em>
      <%= f.number_field :level %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-3 float-left">
      <%= f.label :hpIV, "HP IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :hpIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :attIV, "Att IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :attIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :defIV, "Def IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :defIV %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-3 float-left">
      <%= f.label :spaIV, "SpA IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :spaIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :spdIV, "SpD IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :spdIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :speIV, "Spe IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :speIV %>
    </div>
  </div>

  <div class="row">
    <div class="submit columns small-7">
      <%= f.submit "Submit Changes" %>
    </div>
  </div>
<% end %>
