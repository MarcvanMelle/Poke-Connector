<div class="row page-head">
  <div class="columns small-12">
    <h1>Offer a new Pokemon</h1>
  </div>
</div>

<div class="row search-bar">
  <div class="columns small-12">

  </div>
</div>

<%= form_for :pokeballs, method: :post, url: pokeballs_path do |f| %>

  <div class="row">
    <div class="columns small-7">
      <%= f.label :pokemon %>
      <%= f.select :pokemon, options_for_select(@pokemon) %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-3 float-left">
      <%= f.label :level, class: "inline" %>
      <em>(1-100)</em>
      <%= f.number_field :level %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-7">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-3 float-left">
      <%= f.label :hpIV, "HP IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :hpIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :attIV, "Att IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :attIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :defIV, "Def IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :defIV %>
    </div>
  </div>

  <div class="row">
    <div class="field columns small-3 float-left">
      <%= f.label :spaIV, "SpA IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :spaIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :spdIV, "SpD IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :spdIV %>
    </div>

    <div class="field columns small-3 float-left">
      <%= f.label :speIV, "Spe IV", class: "inline" %>
      <em>(0-31)</em>
      <%= f.number_field :speIV %>
    </div>
  </div>

  <div class="row button-row submit-zone">
    <div class="submit columns small-7">
      <%= f.submit "Submit Offer", class: "button" %>
    </div>
  </div>
<% end %>
