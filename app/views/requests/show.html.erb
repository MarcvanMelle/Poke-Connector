<div class="row">
  <div class="columns small-8">
    <h2><%= @request.user.username %>'s Trade Request for <%= @request.pokemon.name %></h2>
  </div>
</div>

<div class="row">
  <div id="offer<%= @request.id %>" class="text-center columns small-3 small-pokediv callout">
    <%= image_tag @request.pokemon.sprite, class: "small-poke-sprite" %>
  </div>
  <div id="offer-detail<%= @request.id %>" class="columns small-8 float-left">
    <div class="">
      <%= @request.pokemon.typeB if @request.pokemon.typeB %>
      <%= @request.pokemon.typeA %>
    </div>
    <h5><strong>Description: </strong><%= @request.description == "" ? "N/A" : @request.description %></h5>
    <% if @request.user == current_user %>
      <%= link_to "Edit Request", edit_request_path(@request.id) %>
      <%= link_to "Delete Request", request_path(@request.id), method: :delete %>
    <% end %>
  </div>
</div>
